{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2021",
    "rootDirs": ["src", "tests"],
    "sourceMap": true,
    "skipLibCheck": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@/test/*": ["../tests/*"],
    },
    "strict": true,
    // "strictNullChecks": true,
    // "strictFunctionTypes": true,
    // "strictPropertyInitialization": true,
    // "noImplicitAny": true
  },
  "include": [
    "src", "tests"
  ]
}
